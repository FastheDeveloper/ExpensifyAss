{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "esnext",
    "incremental": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext", "es2017"],
    "paths": {
      "~/*": ["*"],
      "~core/*": ["./src/core/*"],
      "~components/*": ["./src/lib/components/*"],
      "~lib/*": ["./src/lib/*"],
      "~providers/*": ["./src/providers/*"]
    },
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "include": [
    "**/*.ts",
    "**/*.tsx",

    "src/constants/colorConstants.js",
    "src/app/index.jsx",
    "src/app/details.jsx",
    "src/app/+not-found.jsx",
    "src/app/+html.jsx",
    "src/app/_layout.jsx",
    "src/components/CheckBox/Checkbox.stories.jsx",
    "src/components/CheckBox/Checkbox.jsx",
    "src/components/InputField/InputField.stories.jsx",
    "src/components/InputField/InputField.jsx",
    "src/components/Button/AppButton.stories.jsx",
    "src/components/Button/AppButton.jsx",
    "src/providers/AuthProvider.tsx",
    "App.tsx",
    "src/screens/AddTransaction.jsx",
    "src/core/services/modalService.js",
    "src/lib/components/Button/BackButton.jsx",
    "src/lib/components/Button/AppButton.jsx",
    "src/lib/components/Calendar/Calendar.jsx",
    "src/lib/components/CheckBox/Checkbox.jsx",
    "src/lib/components/InputField/InputField.jsx",
    "src/lib/components/LoadingRows/LoadingRow.jsx",
    "src/lib/components/Modal/LoginModal.jsx",
    "src/lib/components/Modal/Modal.jsx",
    "src/lib/components/Modal/TransactionModal.jsx",
    "src/lib/components/TaskList/TaskList.jsx",
    "src/navigation/StackNavigator.jsx",
    "src/providers/TransactionProvider.jsx",
    "src/screens/TransactionDetailScreen.jsx",
    "src/screens/TransactionDetailScreen.jsx",
    "src/screens/Onboarding.jsx",
    "src/screens/NoInternet.jsx",
    "src/screens/LoginScreen.jsx",
    "src/screens/HomeScreen.jsx",
    "src/screens/AllTransactionList.jsx"
  ]
}
